@model ProjeYonetim.Models.Projeler
@{
    ViewBag.Title = "Yeni";
    Layout = "~/Views/Shared/adminLayoutPage.cshtml";
}

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Yeni Proje</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                @using (Html.BeginForm("Yeni", "Proje", FormMethod.Post))
                                {
                                    <div class="form-group">
                                        <label>Proje Adı</label>
                                        @Html.TextBoxFor(model => model.ProjeAdi, new { @class = "form-control",@required="required" })
                                    </div>
                                    <div class="form-group">
                                        <label>Proje Durumu</label>
                                        @Html.DropDownListFor(m => m.DurumId, new SelectList(ProjeYonetim.Core.ProjeRepository.GetProjeDurumList(), "ID", "DurumAdi"), "Seçiniz..", new { @class = "form-control", @required = "required" })
                                    </div>
                                    <div class="form-group">
                                        <label>Açıklama</label>
                                        @Html.TextAreaFor(model => model.Aciklama, new { @class = "form-control", @required = "required" })
                                    </div>
                                    <div class="form-group">
                                        <label>Başlangıç Tarihi</label>
                                        @Html.TextBoxFor(model => model.BaslangicTarihi, new { @class = "form-control", @type = "date", @required = "required" })
                                    </div>
                                    <div class="form-group">
                                        <label>Bitiş Tarihi</label>
                                        @Html.TextBoxFor(model => model.BitisTarihi, new { @class = "form-control", @type = "date", @required = "required" })
                                    </div>
                                    <div class="form-group">
                                        <label>Görevli Kullanıcı</label>
                                        @Html.DropDownListFor(m => m.KullaniciId, new SelectList(ProjeYonetim.Core.ProjeRepository.GetProjeKullaniciList(), "ID", "KullaniciAdi"), "Seçiniz..", new { @class = "form-control", @required = "required" })

                                    </div>
                                    <div class="pull-right">
                                        <a href="/Proje/Liste" class="btn btn-default">Listele</a>
                                        <button type="submit" class="btn btn-default">Kaydet</button>

                                    </div>
                                }
                            </div>
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->